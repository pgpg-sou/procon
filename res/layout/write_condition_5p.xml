<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/write_9_1_title"
                style="@style/write_9_title"
                android:background="#FFDFA5"
                android:gravity="center"
                android:text="保護者の記録[１歳６ヶ月頃]" />
            <!-- ダミー -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="　" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <!-- ソース側で自動記入します -->

                <EditText
                    android:id="@+id/EditText_write_condition_day_record"
                    style="@style/write_9s_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number" >
                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" 記録" >
                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_write_condition_day_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/noimage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/Button_write_checkup_9p_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="写真を撮る" />

                <Button
                    android:id="@+id/Button_write_checkup_9p_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ギャラリーから選択" />
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="　" >
            </TextView>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_marginTop="1dip"
                        android:layout_weight="4"
                        android:background="#FFDFA5"
                        android:text="ひとり歩きをしたのはいつですか｡" >
                    </TextView>

                    <Button
                        android:id="@+id/Button_write_condition1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="datePickerShow1"
                        android:text="日付を入力" />

                    <EditText
                        android:id="@+id/EditText_write_condition1"
                        style="@style/write_9s_edittext"
                        android:layout_width="0dp"
                        android:layout_weight="2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_marginTop="1dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="頃" >
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="ママ、ブーブーなど意味のあることばをいくつか話しますか｡" >
                    </TextView>

                    <RadioGroup
                        android:id="@+id/radio_write_condition2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition2_yes"
                            style="@style/left_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition2_no"
                            style="@style/right_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="自分でコップを持って水を飲めますか｡" >
                    </TextView>



                    <RadioGroup
                        android:id="@+id/radio_write_condition3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition3_yes"
                            style="@style/left_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition3_no"
                            style="@style/right_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="哺乳ビンを使っていますか。（いつまでも哺乳ビンを使って飲むのは、むし歯につながるおそれがあるので、やめるようにしましょう｡） " >
                    </TextView>



                    <RadioGroup
                        android:id="@+id/radio_write_condition4"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition4_no"
                            style="@style/left_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition4_yes"
                            style="@style/right_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="食事や間食（おやつ）の時間はだいたい決まっていますか。 " >
                    </TextView>



                    <RadioGroup
                        android:id="@+id/radio_write_condition5"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition5_yes"
                            style="@style/left_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition5_no"
                            style="@style/right_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="歯の仕上げみがきをしてあげていますか。" >
                    </TextView>



                    <RadioGroup
                        android:id="@+id/radio_write_condition6"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition6_yes"
                            style="@style/left_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition6_no"
                            style="@style/right_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="極端にまぶしがったり、目の動きがおかしいのではないかと気になったりしますか｡" >
                    </TextView>



                    <RadioGroup
                        android:id="@+id/radio_write_condition7"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition7_no"
                            style="@style/left_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition7_yes"
                            style="@style/right_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="うしろから名前を呼んだとき、振り向きますか｡" >
                    </TextView>



                    <RadioGroup
                        android:id="@+id/radio_write_condition8"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition8_yes"
                            style="@style/left_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition8_no"
                            style="@style/right_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="どんな遊びが好きですか。" >
                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="遊びの例 :" >
                    </TextView>

                    <EditText
                        android:id="@+id/EditText_write_condition9"
                        style="@style/write_9s_edittext"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="歯にフッ化物（フッ素）の塗布やフッ素入り歯磨きの使用をしていますか。" >
                    </TextView>

                    <RadioGroup
                        android:id="@+id/radio_write_condition10"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition10_yes"
                            style="@style/left_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition10_no"
                            style="@style/right_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="子育てについて気軽に相談できる人はいますか。" >
                    </TextView>



                    <RadioGroup
                        android:id="@+id/radio_write_condition11"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition11_yes"
                            style="@style/left_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition11_no"
                            style="@style/right_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:background="#FFDFA5"
                        android:text="子育てについて不安や困難を感じることがありますか。" >
                    </TextView>

                    <RadioGroup
                        android:id="@+id/radio_write_condition12"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio_write_condition12_no"
                            style="@style/left_no_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition12_yes"
                            style="@style/center_yes_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radio_write_condition11_none"
                            style="@style/right_none_orange_radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:layout_weight="4"
                        android:background="#FFDFA5"
                        android:text="成長の様子、育児の心配、かかった病気、感想などを自由に記入しましょう。" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" >

                    <!-- デフォルトであえて高さをとるためのダミービュー -->

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:background="#ffffff" >
                    </TextView>

                    <EditText
                        android:id="@+id/EditText_write_condition_other"
                        style="@style/write_9s_edittext"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2" >
                    </EditText>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="1dip"
                        android:layout_marginRight="1dip"
                        android:background="#ffffff" >
                    </TextView>
                </TableRow>
            </TableLayout>

            <!-- 縦長の画像を選択すると下までスクロールされないのでダミースペース -->

            <include layout="@layout/write_save_cancel" />

            <TextView
                style="@style/write_9_question"
                android:layout_width="wrap_content"
                android:text=" " />

            <TextView
                style="@style/write_9_question"
                android:layout_width="wrap_content"
                android:text=" " />
        </LinearLayout>
    </ScrollView>

    <!-- TextView 1～9 -->

</RelativeLayout>