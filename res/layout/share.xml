<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_pink"
    android:orientation="vertical" >

    <!-- 読込・保存ボタン -->

    <TextView
        android:id="@+id/TextView01"
        style="@style/write_9_title"
        android:text="データの同期" >
    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/write_9_question_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/share"
            style="@style/blackOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="あなたのGoogleDriveと同期をとります．" />

        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/write_9_question_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Button_Share_Write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="書き込み" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/write_9_question_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Button_Share_Read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="読み込み" />
        

    </LinearLayout>

    <!-- 読込・保存ボタン -->

</LinearLayout>
