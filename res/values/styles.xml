<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:style/Theme.Light" />

  <style name="CustomTheme.Black" parent="@android:style/Theme.Light">
    <!--  Background style -->

    <item name="android:windowBackground">@drawable/tile_bg</item>

    <!--  Button style -->
    <item name="android:buttonStyle">@style/CustomButton</item>

    <!--  CheckBox style -->
    <item name="android:checkboxStyle">@style/CustomCheckBox</item>

    <!--  RadioButton style -->
    <item name="android:radioButtonStyle">@style/CustomRadioButton</item>

    <!--  EditText style -->
    <item name="android:editTextStyle">@style/CustomEditText</item>

    <!-- SeekBar style -->
    <item name="android:seekBarStyle">@style/CustomSeekBar</item>

  </style>

  <style name="CustomButton" parent="@android:style/Widget.Button">
    <item name="android:background">@drawable/button_stateful</item>
    <item name="android:textColor">@drawable/textcolor_stateful</item>
  </style>

  <style name="CustomCheckBox"
    parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/btn_check</item>
  </style>

  <style name="CustomRadioButton"
    parent="@android:style/Widget.CompoundButton.RadioButton">
    <item name="android:button">@drawable/btn_radio</item>
  </style>

  <style name="CustomEditText" parent="@android:style/Widget.EditText">
    <item name="android:background">@drawable/edit_text</item>
    <item name="android:textAppearance">
      ?android:attr/textAppearanceMediumInverse</item>
    <item name="android:textColor">
      @android:color/primary_text_light</item>
  </style>

  <style name="CustomSeekBar" parent="@android:style/Widget.SeekBar">
    <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
    <item name="android:minHeight">20dip</item>
    <item name="android:maxHeight">20dip</item>
    <item name="android:thumb">@drawable/seek_thumb</item>
    <item name="android:thumbOffset">8dip</item>
  </style>

  <style name="left_no_orange_radiobutton" parent="@android:Widget.CompoundButton.RadioButton">
	<item name="android:background">@drawable/left_no_orange_custom_radiobutton</item> <!-- ラジオボタンのテキストの背景部分をボタンぽいやつに指定。標準だと背景なし -->
	<item name="android:textColor">#ffffff</item>
	<item name="android:text">"いいえ"</item>
	<item name="android:layout_height">fill_parent</item>
	<item name="android:gravity">center</item>
	<item name="android:button">@null</item> <!-- ラジオボタンの先頭の画像を表示しないときにこれを指定するらしい。。。ひたすらググった結果判明 -->
	</style>
