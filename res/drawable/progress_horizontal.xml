<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="5dip" />
      <gradient
        android:startColor="#ffffffff"
        android:endColor="#ffb5cedb"
        android:angle="270"
        />
    </shape>
  </item>
  <item android:id="@android:id/secondaryProgress">
    <clip>
      <shape>
        <corners android:radius="5dip" />
        <gradient
          android:startColor="#ffafd9fa"
          android:endColor="#ff588fad"
          android:angle="270"
          />
      </shape>
    </clip>
  </item>

  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="5dip" />
        <gradient
          android:startColor="#ff0c6fbc"
          android:endColor="#ff35596b"
          android:angle="270"
          />
      </shape>
    </clip>
  </item>
</layer-list>